<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.playhard.studentmgr.activity.lifecycle.FirstActivity">

    <include layout="@layout/title_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <Button
            android:id="@+id/finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="普通页面: onStop->onRestart "
            android:textAllCaps="false"
            android:background="@drawable/bg_commonbtn"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/finish2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dialog页面-onPause->onResume"
            android:textAllCaps="false"
            android:background="@drawable/bg_commonbtn"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/finish3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="普通页面:onPause->OnCreate"
            android:textAllCaps="false"
            android:background="@drawable/bg_commonbtn"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/finish4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="点击两次跳转:onStop->onCreate"
            android:textAllCaps="false"
            android:background="@drawable/bg_commonbtn"
            android:layout_margin="10dp"/>
    </LinearLayout>


</LinearLayout>
