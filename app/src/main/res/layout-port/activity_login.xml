<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.playhard.studentmgr.activity.ActivityLogin"
    android:orientation="vertical">

    <include layout="@layout/title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <!--logo-->
        <RelativeLayout
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <View
                android:layout_width="220dp"
                android:layout_height="70dp"
                android:background="@drawable/logo"
                android:backgroundTint="@color/colorOran"/>
        </RelativeLayout>

        <!--表单-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="35dp"
            android:paddingLeft="60dp"
            android:paddingRight="60dp">

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="18sp"
                android:hint="输入账号"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:background="@drawable/bg_username"
                android:backgroundTint="@color/colorGray5"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="15dp"
                android:focusable="true"
                >
                <requestFocus/>
            </EditText>


            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_below="@id/username"
                android:textSize="18sp"
                android:hint="输入密码"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"

                android:inputType="textPassword"
                android:singleLine="true"
                android:background="@drawable/bg_username"
                android:backgroundTint="@color/colorGray5"
                android:drawableLeft="@drawable/password"
                android:drawablePadding="15dp"/>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_below="@id/password"
                android:layout_marginTop="35dp"
                android:textSize="16sp"
                android:text="登录"
                android:textColor="#F7F7F7"
                android:background="@drawable/btn_login"/>

            <LinearLayout
                android:id="@+id/hrefs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnLogin"
                android:layout_marginTop="18dp"

                android:orientation="horizontal">
                <TextView
                    android:id="@+id/regist_href"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="注    册"
                    android:background="@drawable/list_item" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"/>
                <TextView
                    android:id="@+id/fail_href"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="无法登录"
                    android:background="@drawable/list_item"
                   />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/hrefs"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/colorGray2"
                        android:layout_weight="2"
                       android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="一键登录"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/colorGray2"
                        android:layout_weight="2"
                        android:layout_gravity="center"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1">
                        <!--<ImageView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content" />-->
                        <TextView
                            android:id="@+id/wechat_href"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/wechat"
                            android:gravity="center"
                            android:drawableTop="@drawable/wechat"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1">
                        <!--<ImageView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content" />-->
                        <TextView
                            android:id="@+id/qq_href"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/QQ"
                            android:gravity="center"
                            android:drawableTop="@drawable/qq"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1">
                        <!--<ImageView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content" />-->
                        <TextView
                            android:id="@+id/weibo_href"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/weibo"
                            android:gravity="center"
                            android:drawableTop="@drawable/weibo"/>
                    </RelativeLayout>
                </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="bottom"
                        android:gravity="center|bottom"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:layout_marginBottom="60dp"
                        android:textAllCaps="false"
                        android:text="©2020-202. All rights reserved. "/>

            </LinearLayout>



        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
