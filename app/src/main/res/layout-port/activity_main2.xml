<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.playhard.studentmgr.secondHomeWork.ActivityMain"
    android:background="@color/colorGray1"
    android:orientation="vertical">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
        android:background="@drawable/bg_img2"
    >
        <Button
            android:id="@+id/backToLogin2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_gravity="left"

            android:drawableLeft="@drawable/back3"
            android:background="@drawable/back_config"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="学生信息"
            android:textColor="@color/colorwhite"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:textSize="10pt"
            />
        <Button
            android:id="@+id/addInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorBlack"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/back_config"
            android:drawableRight="@drawable/add3"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        >
        <ListView
            android:id="@+id/lvwStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:listSelector="@drawable/list_item">

        </ListView>

    </LinearLayout>








</LinearLayout>
